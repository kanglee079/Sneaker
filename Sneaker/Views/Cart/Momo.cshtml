@{
    ViewBag.Title = "Momo";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div style="margin: 100px auto; max-width: 400px;">
    <h2 style="text-align: center;">Thanh toán qua MoMo</h2>
    <img src="@Url.Content("~/Assets/Images/Momo/momo.jpg")" alt="Description" />
    @using (Html.BeginForm("OrderSuccess", "Cart", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
    {
        <style>
            .centered-button {
                display: block;
                margin: 0 auto;
                background-color: #008000;
                color: white;
                padding: 15px 32px;
                text-align: center;
                text-decoration: none;
                font-size: 16px;
                cursor: pointer;
                border: none;
                border-radius: 4px;
                transition: background-color 0.3s ease;
            }

                .centered-button:hover {
                    background-color: #006400;
                }
        </style>
        <button class="centered-button">Xác nhận đã thanh toán</button>
    }





</div>